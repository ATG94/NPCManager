<Window x:Class="NPCManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NPCManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel x:Name="MainDP" Margin="5,5,5,5" LastChildFill="False">
        
        <Grid DockPanel.Dock="Top" x:Name="NPCGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
        </Grid>
        
        <WrapPanel DockPanel.Dock="Bottom" x:Name="ButtonWP" Height="50" VerticalAlignment="Stretch">
            <Button>Test</Button>
            <Button>Test2</Button>
            
        </WrapPanel>
        
    </DockPanel>
</Window>
